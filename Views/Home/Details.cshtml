@model OdeToFood.Models.Restaurant
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers 
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>Home</title>
</head>
<body>

<div class="row justify-content-center pt-5 pb-5">
    <div class="col-lg-5">
        <div class="card" style="width: 30rem;">
            <img class="card-img-top" src="https://pngimage.net/wp-content/uploads/2018/06/restaurants-logo-png-3.png" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><b>Cuisine:</b> @Model.Cuisine</li>
                <li class="list-group-item"><b>Location:</b> @Model.Location</li>
                <li class="list-group-item"><b>Phone:</b> @Model.Phone</li>
                <li class="list-group-item"><b>Working days:</b> @Model.CuisineDays</li>
        
            </ul>
            <div class="card-body">
                <a class="btn btn-info" asp-action="Update" asp-controller="About" asp-route-id="@Model.Id">Update</a>
                <button class="btn btn-danger ml-2 mr-2" data-toggle="modal" data-target="#exampleModal" >Delete</button>
                <a class="btn btn-success" asp-action="Index" asp-controller="Home">All restaurants</a>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete warning</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       Are you sure you need to delete this restaurant?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <a class="btn btn-danger" asp-controller="About" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
      </div>
    </div>
  </div>
</div>


</body>
</html>